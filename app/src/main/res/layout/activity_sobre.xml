<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_utfpr"
        android:contentDescription="@string/logo_utfpr_descricao" />

        <TextView
            android:id="@+id/textViewNomeUTFPR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universidade Tecnológica Federal do Paraná"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Nome do Aluno -->
        <TextView
            android:id="@+id/textViewNomeAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Aluno: Ygor Muller"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <!-- Curso -->
        <TextView
            android:id="@+id/textViewCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso: Java Android"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- E-mail -->
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail: ygormuller@alunos.utfpr.edu.br"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Descrição do Aplicativo -->
        <TextView
            android:id="@+id/textViewDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição: Cadastra e classifica cervejas degustadas de acordo com o usuário."
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@color/light_gray"
        android:gravity="center" />

    </LinearLayout>
</ScrollView>